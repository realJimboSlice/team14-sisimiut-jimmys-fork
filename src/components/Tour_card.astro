        <div class="content-heading-1">
            <h2>{data.card_location}</h2>
        </div>
        <div class="content-heading-2">
            <h3>{data.card_name}</h3>
        </div>
        <hr>
        <div class="content-description">
            <p>{data.card_description}</p>
        </div>
        <a href={`/tours/${data.slug}`}><div class="centered-button" tab-index="0">Read more and book now</div></a>
    </div>
</div>

<style>

/* Container for each card start */

/* Overall container */
.card-container {
    display: flex;
    flex-direction: column;
  width: 100%;
  height: 100%;
  border: 1px solid #ccc;
  border-radius: 8px 8px;
  font-family: helvetica, sans-serif;
}

/* Card image */

.card-image-container {
  height: 250px;
  position: relative;
  overflow: hidden;
  border-radius: 8px 8px 0 0;
}

.card-image {
  object-fit: cover;
  width: 100%;
  height: 100%;
  border-radius: 8px 8px 0 0;
}

/* Tags start */

.tag {
  position: absolute;
  left: 10px;
  padding: 5px 10px;
  color: #fff;
  font-size: 13px;
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tag-text {
  font-weight: 700;
}

.tag-img {
  display: flex;
  padding-right: 5px;
  color: #fff;
}

.tag img {
  height: 15px;
  color: #fff;
}

.type-of-tour {
  background-color: #c8102e;
  top: 10px;
}
.duration {
  background-color: #0a1d37;
  top: 40px;
}

.capacity {
  background-color: #000;
  top: 70px;
}

/* Tags slut */

/* Content start */
.content-container {
  background-color: #fff;
  padding: 20px;
  border-radius: 0 0 8px 8px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}

/* Headings */
.content-heading-1 {
  font-size: 20px;
  font-weight: 700;
}

.content-heading-2 {
  font-size: 15px;
  font-weight: 400;
}

/* Description */
.content-description {
  margin-bottom: 20px;
}

.content-description p {
  text-align: left;
  font-size: 15px;
  max-width: 40ch; /* Max antal tegn per linje */
}

hr {
  border: 1px solid #ccc;
  margin: 15px 0;
}

/* Read more and book now button */
.centered-button {
  display: block;
  text-align: center;
  margin: 0 auto;
  padding: 10px 20px;
  background-color: #c8102e;
  color: #fff;
  font-weight: bold;
  border: none;
  border-radius: 5px;
  /* cursor: pointer; */
}

.centered-button:hover {
  text-decoration: underline;
}

/* Read more and book now link */
.content-container a {
  color: #fff;
  text-decoration: none;
}

